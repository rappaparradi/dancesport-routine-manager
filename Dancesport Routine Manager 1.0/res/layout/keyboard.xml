<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hebrwKeyboardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/xsubLayout"
    android:background="#252625"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible" >



		<TableLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:clipChildren="true"
		    android:padding="0sp" 
		    android:orientation="vertical" >

		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:padding="0sp" >

		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="45sp"
		            android:layout_weight="1"
		            android:gravity="center_horizontal|center" >

		            <Button
		                android:id="@+id/xQ"
		                android:layout_width="56sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="Q"
		                android:text="Q"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/xS"
		                android:layout_width="56sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/xQ"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="S"
		                android:text="S"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x1"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/xS"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="1"
		                android:text="1"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x2"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/x1"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="2"
		                android:text="2"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x3"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/x2"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="3"
		                android:text="3"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x4"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/x3"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="4"
		                android:text="4"
		                android:textColor="#000"
		                android:textStyle="bold" />
		        </RelativeLayout>

		    </TableRow>

		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent" >

		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="45sp"
		            android:layout_gravity="center_horizontal"
		            android:layout_weight="1"
		            android:gravity="center_horizontal|center" >

		            <Button
		                android:id="@+id/xA"
		                android:layout_width="56sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="a"
		                android:text="a"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/xAnd"
		                android:layout_width="56sp"
		                android:layout_height="fill_parent"
		                android:layout_toRightOf="@+id/xA"
		                android:layout_alignParentTop="true"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="And"
		                android:text="@string/and"
		                android:textColor="#000"
		                android:textStyle="bold" />

	



		            <Button
		                android:id="@+id/x5"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/xAnd"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="5"
		                android:text="5"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x6"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/x5"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="6"
		                android:text="6"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x7"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:layout_toRightOf="@+id/x6"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="7"
		                android:text="7"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/x8"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_toRightOf="@+id/x7"
		                android:layout_alignParentTop="true"
		                android:ellipsize="marquee"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="8"
		                android:text="8"
		                android:textColor="#000"
		                android:textStyle="bold" />

		        </RelativeLayout>

		    </TableRow>



		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:fitsSystemWindows="true"
		        android:orientation="horizontal" >

		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="45sp"
		            android:layout_weight="1"
		            android:gravity="center_horizontal|center" >
                    
		            <Button
		                android:id="@+id/xDone"
		                android:layout_width="40sp"
		                android:layout_height="fill_parent"
		                android:layout_alignParentLeft="true"
		                android:layout_alignParentTop="true"
		                android:background="@drawable/hide_high"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="done"
		                android:textColor="#000"
		                android:textStyle="bold" />
		            
		            <Button
		                android:id="@+id/xSpace"
		                android:layout_width="75sp"
		                android:layout_height="fill_parent"
		                android:layout_toRightOf="@+id/xDone"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag=" "
		                android:text="_____"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            <Button
		                android:id="@+id/xBack"
		                android:layout_width="33sp"
		                android:layout_height="fill_parent"
		                android:layout_toRightOf="@+id/xSpace"
		                android:background="@drawable/back_high"
		                android:fitsSystemWindows="true"
		                android:soundEffectsEnabled="true"
		                android:tag="back"
		                android:textColor="#000"
		                android:textStyle="bold" />

		            

		        </RelativeLayout>

		    </TableRow>
		</TableLayout>

</RelativeLayout>