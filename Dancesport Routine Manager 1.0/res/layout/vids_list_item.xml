<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoutineEditBG"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:background="@drawable/listrow_bg_hight_level"
    android:clickable="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@id/llRoutineEditClickAble"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout   
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                

                
            </LinearLayout>

            <TextView
                android:id="@+id/tvVidTitle"
                style="@style/TextMainRoutineList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вариация от Джоелла и Кристины" />

            <TextView
                android:id="@+id/tvViddescription"
                style="@style/TextMainRoutineList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вариация от Джоелла и Кристины" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>